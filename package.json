{
  "name": "antonio-laguna",
  "version": "1.0.0",
  "private": true,
  "description": "My personal website!",
  "scripts": {
    "dev": "ELEVENTY_ENV=dev npm-run-all scss --parallel watch:eleventy watch:scss watch:js",
    "build": "ELEVENTY_ENV=prod npm-run-all scss css js build:eleventy",
    "build:eleventy": "eleventy",
    "lint:scss": "stylelint \"./src/sass/**/*.scss\"",
    "lint:js": "eslint src/main.js rollup.config.js",
    "scss": "node-sass src/sass -o src/css -x",
    "css": "postcss src/css/*.css --use autoprefixer cssnano --replace --no-map",
    "js": "rollup -c rollup.config.js",
    "watch:js": "rollup -c rollup.config.js -w",
    "watch:eleventy": "npx eleventy --serve",
    "watch:scss": "node-sass -rw src/sass -o src/css",
    "clean": "rimraf public src/css",
    "social-images": "eleventy-social-images --siteName 'Antonio Laguna' --outputDir 'public' --dataFile social/pages.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LagunasPris/antonio-laguna"
  },
  "author": {
    "name": "Antonio Laguna",
    "email": "anlagmat@gmail.com",
    "url": "https://antonio.laguna.es"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LagunasPris/antonio-laguna/issues"
  },
  "homepage": "https://antonio.laguna.es",
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@11tyrocks/eleventy-plugin-social-images": "^0.1.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "cssnano": "^4.1.10",
    "eleventy-plugin-embed-twitter": "^1.1.0",
    "eslint": "^7.22.0",
    "eslint-config-firstandthird": "^6.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "hasha": "^5.2.2",
    "html-minifier": "^4.0.0",
    "lozad": "^1.16.0",
    "luxon": "^1.26.0",
    "markdown-it": "^12.0.4",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^7.1.0",
    "markdown-it-container": "^3.0.0",
    "markdown-it-image-figures": "^1.0.0",
    "node-sass": "^5.0.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.2",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "slugify": "^1.4.7",
    "stylelint": "^13.12.0",
    "stylelint-actions-formatters": "^0.1.0",
    "stylelint-config-sass-guidelines": "^8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "firstandthird",
      "plugin:mocha/recommended"
    ],
    "plugins": [
      "mocha"
    ],
    "env": {
      "browser": true,
      "es6": true
    }
  }
}
